<% layout("/layout/boilerplate") %>

<div class="row mt-3">
    <h2 class="signupp col-6 offset-3">Log in  <i class="fa-solid fa-right-to-bracket"></i></h2>
    <div class="col-6 offset-3">
        <form action="/login" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text"
                name="username"
                id="username"
                class="form-control"
                required />
                <div class="valid-feedback">Username Available</div>
                <div class="invalid-feedback">Username allready Exist</div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="text"
                name="password"
                id="password"
                class="form-control"
                required />
            </div>
            <button class="btn add-btn">Log in</button>
        </form>
    </div>
</div>