<% layout("/layout/boilerplate") %>
<body>
  <div class="filters" id="filters">
    <div class="filter">
      <div class="icoo"><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </div>
    <div class="filter">
      <div class="icoo"><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </div>
    <div class="filter">
      <div class="icoo"><i class="fa-solid fa-mountain-city"></i></div>
      <p>Iconic city</p>
    </div>
    <div class="filter">
      <div class="icoo"><i class="fa-solid fa-mountain-sun"></i></div>
      <p>Mountains</p>
    </div>
    <div class="filter">
      <div class="icoo"><i class="fa-brands fa-fort-awesome"></i></div>
      <p>Castles</p>
    </div>
    <div class="filter">
      <div class="icoo"><i class="fa-solid fa-person-swimming"></i></div>
      <p>Pools</p>
    </div>
    <div class="filter">
      <div class="icoo"><i class="fa-solid fa-mug-saucer"></i></div>
      <p>Bed & Breakfast</p>
    </div>
    <div class="filter">
      <div class="icoo"><i class="fa-regular fa-face-surprise"></i></div>
      <p>OMG!!</p>
    </div>
    <div class="filter">
      <div class="icoo"><i class="fa-solid fa-umbrella-beach"></i></div>
      <p>Beachfront</p>
    </div>
    <div class="filter">
      <div class="icoo"><i class="fa-solid fa-tents"></i></div>
      <p>Camping</p>
    </div>

    <div class="tax-toggle">
      <div class="form-check form-switch form-check-reverse">
        <input
          class="form-check-input"
          type="checkbox"
          role="switch"
          id="flexSwitchCheckDefault"
        />
        <label class="form-check-label" for="flexSwitchCheckDefault"
          >Display total before taxes</label
        >
      </div>
    </div>
  </div>

  <h2>All Listing:</h2>

  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for (listing of allListing) { %>
    <div class="card col" style="width: 20rem">
      <a href="/listing/<%= listing._id %>" class="listingLink">
        <img src="<%= listing.image.url %>" class="card-img-top" alt="..." />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b class="tite"><%= listing.title %></b>
            <i class="<%= categoryIcons[listing.category] %>"></i><br />
            <span class="card-text-p"><%= listing.description %></span><br />
          </p>

          <p class="tax-price">
            &#8377; <%= listing.price.toLocaleString("en-IN") %>/night
          </p>
          <br />
          <div class="listingcat" style="display: none">
            <p><%= listing.category %></p>
          </div>
        </div>
      </a>
    </div>
    <% } %>
  </div>
</body>
