<% layout("/layout/boilerplate") %>
<div class="row">
  <div class="col-8 offset-2 mt-3">
    <h2><%= listing.title %></h2>
    
    <div class="card">
        <img src="<%= listing.image.url %>" class="card-img-top" alt="listing image" />
        <div class="card-body">
          <p class="card-text mt-3">
            <%= listing.description %><br>
            &#8377; <%= listing.price.toLocaleString("en-IN") %><br>
            <%= listing.location %><br>
            <%= listing.country %><br>
            <div class="linebtn">
              <div>
                <a href="/listing/<%= listing._id %>/edit"><button class="btn add-btn padbtn">Edit</button></a>
              </div>
              <form method="post" action="/listing/<%= listing._id %>?_method=Delete">
              <button class="btn btn-dark">Delete</button>
              </form>
            </div>
          </p>
        </div>
    </div>
    <hr>
    <div>
      <h4>Leave a Review:</h4>
      <form action="/listing/<%= listing._id %>/review" method="post" novalidate class="needs-validation">
        <div class="mt-3 mb-3">
          <label for="rating" class="form-label">Rate: 1 to 5</label>
          <input type="range" min="1" max="5" id="ratingRange" name="review[rating]" class="form-range">
          <div class="output" id="ratingValue">Rating: 3</div>
        </div>
        <div>
          <label for="comment" class="form-label">Leave a Comment</label>
          <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
          <div class="invalid-feedback">
            Please add some comments for review.
          </div>
        </div>
        <button class="btn btn-dark mt-3 mb-3">Submite</button>
      </form>
    </div>
  <hr>
  <h4>All Reviews</h4>
  <div class="row">
  <% for(review of listing.review) { %>
  <div class="card col-5 shado mt-3 ms-3">
    <div class="card-body">
      <h5 class="card-title">Gaurav</h5>
      <p class="card-text"><%= review.rating %><% for(let i = 1; i <= review.rating; i++) { %>
        &starf;
      <% } %></p>
      <p class="card-text"><%= review.comment %></p>
    </div>
    <form action="/listing/<%= listing._id %>/review/<%= review._id %>?_method=Delete" method="post">
      <button class="btn btn-sm btn-dark mb-3 mt-2">Delete</button>
    </form>
  </div>
  <% } %>
  </div>
  </div>
  </div>
</div>
